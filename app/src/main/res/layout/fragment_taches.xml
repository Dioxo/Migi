<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListerTaches.TachesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerNotes"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <RelativeLayout
        android:id="@+id/conteinerNotesVides"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageVide"
            android:layout_width="277dp"
            android:layout_height="409dp"
            android:layout_above="@+id/txtError"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="57dp"
            android:layout_marginBottom="56dp"
            android:adjustViewBounds="false"
            android:src="@drawable/nota" />

        <TextView
            android:id="@+id/txtError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="39dp"
            android:text="No hemos encontrado ninguna nota\nClick '+' para aÃ±adir una nueva "
            android:textAlignment="center"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/conteinerNotNotesAReviser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:layout_width="277dp"
            android:layout_height="409dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="57dp"
            android:adjustViewBounds="false"
            android:src="@drawable/thumbsup" />

        <TextView
            android:id="@+id/txtError2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="73dp"
            android:text="No tienes notas para revisar por hoy"
            android:textAlignment="center" />


    </RelativeLayout>


</FrameLayout>